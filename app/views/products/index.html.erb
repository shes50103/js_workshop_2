<h1>Products</h1>

<table class="table table-striped">
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Money</th>
      <th>Currency</th>
      <th>Tags</th>
      <th>Start at</th>
      <th>End at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.money %></td>
        <td><%= product.currency %></td>
        <td><%= display_tag_list(product.tags) %></td>
        <td><%= product.start_at&.strftime("%m/%d") %></td>
        <td><%= product.end_at&.strftime("%m/%d") %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

